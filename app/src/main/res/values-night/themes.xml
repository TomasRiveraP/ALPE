<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ALPE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Azul1</item>
        <item name="colorPrimaryVariant">@color/Blanco</item>
        <item name="colorOnPrimary">@color/Azul3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Azul4</item>
        <item name="colorSecondaryVariant">@color/Gris</item>
        <item name="colorOnSecondary">@color/Blanco</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="BotonRedondoAzulConSombra">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:elevation">16dp</item>
    </style>
    <style name="SpinnerStyle">
        <item name="android:background">@color/Azul4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupBackground">@color/Azul3</item>
    </style>


</resources>