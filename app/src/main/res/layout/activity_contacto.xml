<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuPrincipal"
    android:background="@drawable/degradado">

    <TextView
        android:id="@+id/CTextView"
        android:layout_width="407dp"
        android:layout_height="59dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Tienes algun problema con el dispositiov o con la app? \n Escrible al desarrollador: "
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu comentario"
        app:layout_constraintBottom_toTopOf="@+id/btnEnviarComentario"
        app:layout_constraintTop_toBottomOf="@+id/CTextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp" />

    <Button
        android:id="@+id/btnEnviarComentario"
        style="@style/BotonRedondoAzulConSombra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_below="@id/editTextComentario"
        android:text="Enviar"
        app:layout_constraintTop_toBottomOf="@+id/editTextComentario"
        tools:layout_editor_absoluteX="161dp" />

</androidx.constraintlayout.widget.ConstraintLayout>